#!/bin/bash
# ProMould Pre-Commit Hook
# Ensures code quality before commits

set -e

echo "üîç Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if Dart is available
if ! command -v dart &> /dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  Dart not found. Skipping checks.${NC}"
    echo "   Install Flutter/Dart or run checks manually"
    exit 0
fi

# 1. Format check
echo "üìù Checking code formatting..."
if dart format --output=none --set-exit-if-changed lib/ test/ > /dev/null 2>&1; then
    echo -e "${GREEN}‚úÖ Code formatting OK${NC}"
else
    echo -e "${RED}‚ùå Code formatting issues found${NC}"
    echo "   Run: dart format lib/ test/"
    exit 1
fi

# 2. Analyze code
echo "üî¨ Analyzing code..."
if flutter analyze --no-fatal-infos --no-fatal-warnings > /tmp/flutter_analyze.log 2>&1; then
    echo -e "${GREEN}‚úÖ Code analysis passed${NC}"
else
    echo -e "${RED}‚ùå Code analysis failed${NC}"
    cat /tmp/flutter_analyze.log
    echo ""
    echo "Fix the issues above before committing."
    exit 1
fi

# 3. Check for common issues
echo "üîé Checking for common issues..."

# Check for print statements in production code
if git diff --cached --name-only | grep -E '\.dart$' | xargs grep -n "print(" 2>/dev/null | grep -v "// ignore:" | grep -v "test/"; then
    echo -e "${YELLOW}‚ö†Ô∏è  Warning: print() statements found in production code${NC}"
    echo "   Consider using LogService instead"
    echo "   Or add // ignore: avoid_print if intentional"
fi

# Check for TODO comments
if git diff --cached --name-only | grep -E '\.dart$' | xargs grep -n "TODO" 2>/dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  Warning: TODO comments found${NC}"
    echo "   Consider creating issues for these items"
fi

# Check for debugPrint
if git diff --cached --name-only | grep -E '\.dart$' | xargs grep -n "debugPrint" 2>/dev/null | grep -v "// ignore:"; then
    echo -e "${YELLOW}‚ö†Ô∏è  Warning: debugPrint found${NC}"
    echo "   Consider using LogService for production code"
fi

echo ""
echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
echo ""
